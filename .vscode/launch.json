    "version": "0.2.0",
    "configurations": [
        {
            "name": "ThiefMD Launch",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/build/com.github.kmwallio.thiefmd",
            "args": [],
            "cwd": "${workspaceFolder}",
            "console": "externalTerminal"
        },
        {
            "name": "Tests Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/tests/tests",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "externalTerminal",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}